<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <div class="card-category my-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @cocktail.photo %>');">
        <h1><%= @cocktail.name %></h1>
      </div>
      <h3>How it is</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>take a shot</th>
            <th>how it is</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= link_to 'Add the sauce', new_cocktail_dose_path(@cocktail.id) %>
      <%= link_to 'Too much sauce', new_cocktail_dose_path(@cocktail.id) %>
      <%= link_to 'Back to Matrix', cocktails_path %>
    </div>
  </div>