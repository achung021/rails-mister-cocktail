<%= form_for(@cocktail) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="mt-3">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Forget It', '#', class: 'btn btn-danger ml-2' %>
    <%= link_to 'Back', cocktails_path %>
  </div>
<% end %>